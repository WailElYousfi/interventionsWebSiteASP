@model IEnumerable<InterventionWebSite.Models.Agency>

@{
    ViewBag.Title = "Liste des agences";
}


<button class="btn btn-danger btn-sm"><a href="~/Agencies/Create"><font color="white">Ajouter une agence</font></a></button><br /><br />

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Les agences</h3>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AgencyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AgencyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AgencyId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.AgencyId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.AgencyId })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AgencyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<br />