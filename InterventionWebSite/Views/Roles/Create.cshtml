@model InterventionWebSite.Models.Role

@{
    ViewBag.Title = "Ajouter un role";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <!-- Horizontal Form -->
    <div class="box box-danger">
        <div class="box-header with-border">
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <div class="form-group">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-sm-1 " })

                <div class="col-sm-11">
                    @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>
            </div><br /><br />
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-1 " })

                <div class="col-sm-11">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div><br /><br />
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-danger"><font color="white">Ajouter</font></button>
            <button class="btn btn-default"><a href="~/Roles/Index"><font color="black">Annuler</font></a></button>

        </div>
        <!-- /.box-footer -->
    </div>
    <br />

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
