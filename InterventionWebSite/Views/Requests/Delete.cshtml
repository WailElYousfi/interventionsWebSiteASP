@model InterventionWebSite.Models.Request

@{
    ViewBag.Title = "Supprimer une demande";
}

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Etes-vous sûr que vous voulez supprimer cette demande?</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-1"></div>

            <div class="col-lg-11">


                    <dl class="dl-horizontal">
                        <dt>
                            Demande n:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RequestId)
                        </dd><br />

                        <dt>
                           Nom d'employe de reception
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ReceptionEmployee.Lastname)
                        </dd><br />

                             <dt>
                                 Prenom d'employe de reception
                             </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ReceptionEmployee.Firstname)
                        </dd><br />

                        <dt>
                            Nom d'agent
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.LastName)
                        </dd><br />

                        <dt>
                           Prenom d'agent
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Staff.FirstName)
                        </dd><br />

                        <dt>
                            @Html.DisplayNameFor(model => model.TypeOfCommunication)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TypeOfCommunication)
                        </dd><br />

                        <dt>
                            Date de la demande
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RequestDate)
                        </dd><br />

                        <dt>
                            @Html.DisplayNameFor(model => model.problems)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.problems)
                        </dd><br />

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Supprimer" class="btn btn-default" /> |
                            @Html.ActionLink("Liste des demandes", "Index")
                        </div><br />
                    }
                </div>
            </div>
        </div>
    </div>

