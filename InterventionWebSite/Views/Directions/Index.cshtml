@model IEnumerable<InterventionWebSite.Models.Direction>

@{
    ViewBag.Title = "Liste des directions";
}

<button class="btn btn-danger btn-sm"><a href="~/Directions/Create"><font color="white">Ajouter une direction</font></a></button><br /><br />

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Les directions</h3>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DirectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DirectionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DirectionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DirectionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DirectionId })
        </td>
    </tr>
}
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DirectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<br />